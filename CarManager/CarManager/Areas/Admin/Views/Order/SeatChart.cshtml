@model CarManager.Areas.Admin.Models.SeatChartModel

@{
    List<int> temp = new List<int>();
    for (int i = 1; i <= Model.NumberFloors; i++)
    {
        temp.Add(i);
    }

    var Floors = new SelectList(temp);
}


<div class="row">
    <table class="table" style="margin-bottom: 0;">
        <tr>
            <td style="border: none;">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <label class="control-label">Tầng</label>
                    @Html.DropDownListFor(model => model.CurrentFloor, @Floors as SelectList, new { @class = "form-control" })
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <ul style="list-style: none;" class="clearfix">
                        <li class="col-lg-4">
                            <i class="fa fa-circle" style="color: #D4D4D4;"></i><br />Chưa thanh toán
                        </li>
                        <li class="col-lg-4">
                            <i class="fa fa-circle" style="color: red;"></i><br />Đã thanh toán
                        </li>
                    </ul>
                </div>
            </td>
        </tr>

        <tr>
            <td>
                <table class="table car_chart">
                    <tr>
                        <td>
                            <table class="table car_chart">
                                @foreach (var row in Model.SeatsList)
                                {
                                    <tr>
                                        @foreach (var seat in row)
                                        {
                                            <td>
                                                <a href="javascript:void(0)" class="link_icon_seat">
                                                    <img class="icon_seat" src="~/Content/Images/bed-white.png" />
                                                    <span class="seat_number">
                                                        @seat
                                                    </span>
                                                </a>
                                            </td>
                                        }
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>
                        
                </table>
            </td>
        </tr>
    </table>
</div>
<div class="row">
    @using (Html.BeginForm("InsertSeat", "Order", new { IdOrder = @ViewBag.IdOrder, IdSchedule = @ViewBag.IdSchedule }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="col-md-12 col-sm-12 col-xs-12">
                <label class="control-label">Chọn ghế</label>
                <div class="input-group">
                    @Html.DropDownListFor(model => model.SeatNumbers, @Floors as SelectList, new { @class = "form-control", multiple = "multiple" })
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">@Resource.Order<i class="fa" aria-hidden="true"></i></button>
                    </span>
                </div>
                @Html.ValidationMessageFor(model => model.SeatNumbers)
            </div>
        </div>
    }
</div>
